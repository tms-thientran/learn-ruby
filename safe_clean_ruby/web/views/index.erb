<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SafeClean Web Preview</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
            color: #333;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }

        .header h1 {
            font-size: 32px;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .content {
            display: flex;
            flex-direction: column;
            gap: 25px;
            padding: 0 25px 25px;
        }
        
        .overview-row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            align-items: stretch;
        }

        .summary-panel {
            flex: 1;
            min-width: 320px;
            background: white;
            border-radius: 12px;
            padding: 22px;
            border: 1px solid #e6e8f0;
        }

        .summary-panel h3 {
            font-size: 15px;
            color: #4c4f65;
            margin-bottom: 18px;
            font-weight: 600;
            letter-spacing: 0.2px;
            text-transform: uppercase;
        }

        .summary-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
        }

        .summary-item {
            padding: 12px 14px;
            border: 1px solid #f1f2f7;
            border-radius: 10px;
            background: #fbfcff;
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .summary-label {
            color: #8c91a5;
            font-size: 12px;
            letter-spacing: 0.5px;
            text-transform: uppercase;
        }

        .summary-value {
            color: #21233c;
            font-weight: 600;
            font-size: 20px;
        }

        .overview-actions {
            width: 220px;
            min-width: 200px;
            background: white;
            border-radius: 12px;
            padding: 22px;
            border: 1px solid #e6e8f0;
            display: flex;
            flex-direction: column;
            gap: 12px;
            justify-content: flex-start;
            align-items: stretch;
        }

        .btn {
            padding: 12px 20px;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-primary:hover {
            background: #5568d3;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary {
            background: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(108, 117, 125, 0.4);
        }

        .btn-preview {
            padding: 8px 14px;
            border: 1px solid #d0d4dd;
            background: #fff;
            border-radius: 6px;
            font-size: 13px;
            font-weight: 500;
            color: #4a4d63;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .btn-preview:hover {
            border-color: #667eea;
            color: #667eea;
        }

        .preview-disabled {
            color: #c0c4d0;
            font-size: 13px;
        }

        .main-content {
            padding: 25px;
        }

        .filters {
            display: flex;
            gap: 15px;
            margin-bottom: 25px;
            flex-wrap: wrap;
        }

        .filter-group {
            flex: 1;
            min-width: 200px;
        }

        .filter-group label {
            display: block;
            font-size: 12px;
            color: #666;
            margin-bottom: 6px;
            font-weight: 500;
        }

        select, input[type="text"] {
            width: 100%;
            padding: 10px 12px;
            border: 2px solid #e0e0e0;
            border-radius: 6px;
            font-size: 14px;
            transition: border-color 0.3s ease;
        }

        select:focus, input[type="text"]:focus {
            outline: none;
            border-color: #667eea;
        }

        .table-container {
            overflow-x: auto;
            border-radius: 8px;
            border: 1px solid #e0e0e0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
        }

        table.file-table {
            table-layout: fixed;
        }

        table.file-table th:nth-child(1) {
            width: 50px;
        }

        table.file-table th:nth-child(2) {
            width: 32%;
        }

        table.file-table th:nth-child(3) {
            width: 90px;
        }

        table.file-table th:nth-child(4) {
            width: 100px;
        }

        table.file-table th:nth-child(5) {
            width: 130px;
        }

        table.file-table th:nth-child(6) {
            width: 120px;
        }

        table.file-table th:nth-child(7) {
            width: 70px;
        }

        table.file-table th:nth-child(8) {
            width: 140px;
        }

        table.file-table th:nth-child(9) {
            width: auto;
        }

        thead {
            background: #f8f9fa;
        }

        th {
            padding: 15px 12px;
            text-align: left;
            font-size: 13px;
            font-weight: 600;
            color: #495057;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid #e0e0e0;
        }

        td {
            padding: 12px;
            border-bottom: 1px solid #f0f0f0;
            font-size: 14px;
            vertical-align: middle;
        }

        tbody tr:hover {
            background: #f8f9fa;
        }

        tbody tr:last-child td {
            border-bottom: none;
        }

        input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        #select-all {
            width: 20px;
            height: 20px;
            cursor: pointer;
        }

        .badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 500;
        }

        .badge-temp {
            background: #fff3cd;
            color: #856404;
        }

        .badge-large {
            background: #f8d7da;
            color: #721c24;
        }

        .badge-old {
            background: #d1ecf1;
            color: #0c5460;
        }

        .badge-duplicate {
            background: #e2d9f3;
            color: #4a3271;
        }

        .badge-default {
            background: #e9ecef;
            color: #495057;
        }

        .suggestion-delete {
            color: #dc3545;
            font-weight: 500;
        }

        .suggestion-review {
            color: #ffc107;
            font-weight: 500;
        }

        .suggestion-keep {
            color: #28a745;
            font-weight: 500;
        }

        .mark-check {
            color: #28a745;
            font-size: 18px;
        }

        .bottom-actions {
            display: flex;
            gap: 15px;
            margin-top: 25px;
            padding-top: 25px;
            border-top: 1px solid #e0e0e0;
        }

        .btn-action {
            padding: 12px 24px;
            border: none;
            border-radius: 6px;
            font-size: 15px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-save {
            background: #28a745;
            color: white;
        }

        .btn-save:hover {
            background: #218838;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(40, 167, 69, 0.4);
        }

        .btn-export {
            background: #17a2b8;
            color: white;
        }

        .btn-export:hover {
            background: #138496;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(23, 162, 184, 0.4);
        }

        input[type="text"].note-input {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #e0e0e0;
            border-radius: 4px;
            font-size: 14px;
            min-height: 40px;
        }

        .filename-cell {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            max-width: 100%;
        }

        .filename-cell:hover {
            cursor: help;
        }

        table.file-table th:nth-child(9),
        table.file-table td:nth-child(9) {
            width: 230px;
        }

        @media (max-width: 1024px) {
            .content {
                padding: 0 16px 16px;
            }

            .overview-row {
                flex-direction: column;
            }

            .overview-actions {
                width: 100%;
            }
        }

        .empty-state {
            padding: 40px 0;
            text-align: center;
            color: #868e96;
            font-size: 15px;
        }

        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(15, 23, 42, 0.65);
            display: none;
            align-items: center;
            justify-content: center;
            padding: 20px;
            z-index: 100;
        }

        .modal-overlay.active {
            display: flex;
        }

        .modal {
            background: #fff;
            border-radius: 12px;
            width: min(800px, 100%);
            max-height: 85vh;
            display: flex;
            flex-direction: column;
            box-shadow: 0 25px 70px rgba(15, 23, 42, 0.25);
        }

        .modal-header {
            padding: 18px 24px;
            border-bottom: 1px solid #f1f3f8;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-header h4 {
            font-size: 16px;
            font-weight: 600;
            color: #1f2937;
        }

        .modal-close {
            border: none;
            background: transparent;
            font-size: 20px;
            cursor: pointer;
            color: #6b7280;
        }

        .modal-body {
            padding: 20px 24px;
            overflow: auto;
        }

        .preview-content {
            font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, monospace;
            background: #0f172a;
            color: #e2e8f0;
            padding: 16px;
            border-radius: 8px;
            white-space: pre-wrap;
            word-break: break-word;
            max-height: 60vh;
            overflow: auto;
        }

        .preview-loading,
        .preview-error {
            font-size: 14px;
            color: #475569;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>SafeClean Web Preview <%= @name %></h1>
        </div>

        <div class="content">
            <div class="overview-row">
                <div class="summary-panel">
                    <h3>üìä T·ªïng quan</h3>
                    <div class="summary-grid">
                        <div class="summary-item">
                            <span class="summary-label">T·ªïng file</span>
                            <span class="summary-value"><%= @total_files %></span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">ƒê√£ mark</span>
                            <span class="summary-value"><%= @marked_count %></span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">Dung l∆∞·ª£ng x√≥a</span>
                            <span class="summary-value"><%= @marked_size %> bytes</span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">T·ªïng dung l∆∞·ª£ng</span>
                            <span class="summary-value"><%= @total_size %> bytes</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="main-content">
                <div class="filters">
                    <div class="filter-group">
                        <label>Filter by Type</label>
                        <select id="filter-type">
                            <option value="all">All</option>
                            <option value="temp">temp</option>
                            <option value="large">large</option>
                            <option value="old">old</option>
                            <option value="duplicate">duplicate</option>
                        </select>
                    </div>
                    <div class="filter-group">
                        <label>Sort by</label>
                        <select id="sort-by">
                            <option value="size-desc">Size (Largest first)</option>
                            <option value="size-asc">Size (Smallest first)</option>
                            <option value="date-desc">Date (Newest first)</option>
                            <option value="date-asc">Date (Oldest first)</option>
                        </select>
                    </div>
                    <div class="filter-group">
                        <label>Search</label>
                        <input type="text" id="search-input" placeholder="Search files...">
                    </div>
                </div>

                <div class="table-container">
                    <table class="file-table">
                        <thead>
                            <tr>
                                <th style="width: 50px;">
                                    <input type="checkbox" id="select-all" title="Select all / Unselect all">
                                </th>
                                <th>Filename</th>
                                <th>Type</th>
                                <th>Size</th>
                                <th>Modified</th>
                                <th>Suggestion</th>
                                <th>Mark</th>
                                <th>Preview</th>
                                <th>Note</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if @files.any? %>
                                <% @files.each_with_index do |file, index| %>
                                    <% warning = file[:warning].to_s.strip.upcase %>
                                    <% badge_class = case warning
                                        when 'TEMP' then 'badge-temp'
                                        when 'OLD' then 'badge-old'
                                        when 'LARGE' then 'badge-large'
                                        when 'DUPLICATE' then 'badge-duplicate'
                                        else 'badge-default'
                                    end %>
                                    <% badge_label = warning.empty? ? 'unknown' : warning.downcase %>
                                    <% suggestion_text, suggestion_class = case warning
                                        when 'TEMP'
                                          ['Delete', 'suggestion-delete']
                                        when 'LARGE', 'DUPLICATE'
                                          ['Review', 'suggestion-review']
                                        else
                                          ['Keep', 'suggestion-keep']
                                    end %>
                                    <% extension = file[:extension].to_s.downcase %>
                                    <% previewable = %w[.txt .log .md .csv .json .yml .yaml].include?(extension) %>
                                    <% search_tokens = [file[:filename], file[:path], file[:extension], warning, file[:note]].compact.join(' ').downcase %>
                                    <% file_size = file[:size].to_f %>
                                    <% modified_date = file[:modified].to_s %>
                                    <tr class="file-row"
                                        data-path="<%= file[:path] %>"
                                        data-index="<%= index %>"
                                        data-search="<%= search_tokens %>"
                                        data-type="<%= badge_label %>"
                                        data-size="<%= file_size %>"
                                        data-date="<%= modified_date %>">
                                        <td>
                                            <input type="checkbox" class="file-checkbox" 
                                                   <%= 'checked' if file[:marked] %> 
                                                   data-original-marked="<%= file[:marked] ? 'true' : 'false' %>"
                                                   data-path="<%= file[:path] %>">
                                        </td>
                                        <td class="filename-cell" title="<%= file[:filename] %>"><%= file[:filename] %></td>
                                        <td>
                                            <span class="badge <%= badge_class %>"><%= badge_label %></span>
                                        </td>
                                        <td><%= file[:size] %></td>
                                        <td><%= file[:modified] %></td>
                                        <td class="<%= suggestion_class %>"><%= suggestion_text %></td>
                                        <td>
                                            <span class="mark-check"><%= '‚úÖ' if file[:marked] %></span>
                                        </td>
                                        <td class="preview-cell">
                                            <% if previewable %>
                                                <button 
                                                    class="btn-preview" 
                                                    data-index="<%= index %>" 
                                                    data-filename="<%= file[:filename] %>"
                                                    data-path="<%= file[:path] %>">
                                                    Preview
                                                </button>
                                            <% else %>
                                                <span class="preview-disabled">‚Äî</span>
                                            <% end %>
                                        </td>
                                        <td>
                                            <input type="text" class="note-input" 
                                                   value="<%= file[:note].to_s %>" 
                                                   placeholder="Add note..."
                                                   data-path="<%= file[:path] %>">
                                        </td>
                                    </tr>
                                <% end %>
                                <tr id="no-results-row" class="empty-state" style="display: none;">
                                    <td colspan="9">Kh√¥ng t√¨m th·∫•y k·∫øt qu·∫£ ph√π h·ª£p</td>
                                </tr>
                            <% else %>
                                <tr>
                                    <td colspan="9" class="empty-state">Ch∆∞a c√≥ d·ªØ li·ªáu ƒë·ªÉ hi·ªÉn th·ªã</td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>

                <div class="bottom-actions">
                    <button class="btn-action btn-save">üíæ Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-overlay" id="preview-modal">
        <div class="modal">
            <div class="modal-header">
                <h4 id="preview-title">Preview</h4>
                <button class="modal-close" id="preview-close">&times;</button>
            </div>
            <div class="modal-body">
                <div id="preview-status" class="preview-loading">ƒêang t·∫£i n·ªôi dung...</div>
                <pre class="preview-content" id="preview-content" hidden></pre>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const selectAllCheckbox = document.getElementById('select-all');
            const fileCheckboxes = document.querySelectorAll('.file-checkbox');
            const noteInputs = document.querySelectorAll('.note-input');
            const saveButton = document.querySelector('.btn-save');
            const previewButtons = document.querySelectorAll('.btn-preview');
            const previewModal = document.getElementById('preview-modal');
            const previewClose = document.getElementById('preview-close');
            const previewContent = document.getElementById('preview-content');
            const previewStatus = document.getElementById('preview-status');
            const modalOverlay = document.getElementById('preview-modal');
            const previewTitle = document.getElementById('preview-title');
            const searchInput = document.getElementById('search-input');
            const filterType = document.getElementById('filter-type');
            const sortBy = document.getElementById('sort-by');
            const fileRows = Array.from(document.querySelectorAll('.file-row'));
            const tbody = document.querySelector('tbody');
            const noResultsRow = document.getElementById('no-results-row');
            
            // H√†m c·∫≠p nh·∫≠t mark icon
            function updateMarkIcon(checkbox) {
                const row = checkbox.closest('tr');
                const markCell = row.querySelector('td:nth-child(7)');
                const markSpan = markCell.querySelector('.mark-check');
                
                if (checkbox.checked) {
                    if (!markSpan) {
                        markCell.innerHTML = '<span class="mark-check">‚úÖ</span>';
                    } else {
                        markSpan.textContent = '‚úÖ';
                    }
                } else {
                    if (markSpan) {
                        markSpan.textContent = '';
                    }
                }
            }
            
            // H√†m restore tr·∫°ng th√°i mark ban ƒë·∫ßu
            function restoreOriginalMark(checkbox) {
                const originalMarked = checkbox.getAttribute('data-original-marked') === 'true';
                checkbox.checked = originalMarked;
                updateMarkIcon(checkbox);
            }
            
            // X·ª≠ l√Ω select all checkbox
            selectAllCheckbox.addEventListener('change', function() {
                const isChecked = this.checked;
                
                fileCheckboxes.forEach(function(checkbox) {
                    checkbox.checked = isChecked;
                    updateMarkIcon(checkbox);
                });
                
                // N·∫øu uncheck select all, restore l·∫°i tr·∫°ng th√°i ban ƒë·∫ßu
                if (!isChecked) {
                    fileCheckboxes.forEach(function(checkbox) {
                        restoreOriginalMark(checkbox);
                    });
                }
            });
            
            // X·ª≠ l√Ω t·ª´ng checkbox ri√™ng l·∫ª
            fileCheckboxes.forEach(function(checkbox) {
                checkbox.addEventListener('change', function() {
                    updateMarkIcon(this);
                    
                    // C·∫≠p nh·∫≠t tr·∫°ng th√°i select all
                    const allChecked = Array.from(fileCheckboxes).every(cb => cb.checked);
                    const noneChecked = Array.from(fileCheckboxes).every(cb => !cb.checked);
                    
                    if (allChecked) {
                        selectAllCheckbox.checked = true;
                        selectAllCheckbox.indeterminate = false;
                    } else if (noneChecked) {
                        selectAllCheckbox.checked = false;
                        selectAllCheckbox.indeterminate = false;
                    } else {
                        selectAllCheckbox.checked = false;
                        selectAllCheckbox.indeterminate = true;
                    }
                });
            });
            
            // Kh·ªüi t·∫°o tr·∫°ng th√°i select all ban ƒë·∫ßu
            const allChecked = Array.from(fileCheckboxes).every(cb => cb.checked);
            if (allChecked && fileCheckboxes.length > 0) {
                selectAllCheckbox.checked = true;
            }

            function applyFiltersAndSort() {
                if (!fileRows.length) return;

                const searchQuery = searchInput ? searchInput.value.trim().toLowerCase() : '';
                const filterTypeValue = filterType ? filterType.value : 'all';
                const sortValue = sortBy ? sortBy.value : 'size-desc';

                // Filter rows
                let visibleRows = fileRows.filter(function(row) {
                    // Search filter
                    const matchesSearch = !searchQuery || row.dataset.search.includes(searchQuery);
                    
                    // Type filter
                    const matchesType = filterTypeValue === 'all' || row.dataset.type === filterTypeValue;
                    
                    return matchesSearch && matchesType;
                });

                // Sort rows
                visibleRows.sort(function(a, b) {
                    if (sortValue === 'size-desc') {
                        return parseFloat(b.dataset.size) - parseFloat(a.dataset.size);
                    } else if (sortValue === 'size-asc') {
                        return parseFloat(a.dataset.size) - parseFloat(b.dataset.size);
                    } else if (sortValue === 'date-desc') {
                        return new Date(b.dataset.date) - new Date(a.dataset.date);
                    } else if (sortValue === 'date-asc') {
                        return new Date(a.dataset.date) - new Date(b.dataset.date);
                    }
                    return 0;
                });

                // Hide all rows first
                fileRows.forEach(function(row) {
                    row.style.display = 'none';
                });

                // Show and reorder visible rows
                if (tbody && visibleRows.length > 0) {
                    visibleRows.forEach(function(row) {
                        tbody.appendChild(row);
                        row.style.display = '';
                    });
                }

                // Show/hide no results message
                if (noResultsRow) {
                    noResultsRow.style.display = visibleRows.length === 0 ? '' : 'none';
                }
            }

            if (searchInput) {
                searchInput.addEventListener('input', applyFiltersAndSort);
            }

            if (filterType) {
                filterType.addEventListener('change', applyFiltersAndSort);
            }

            if (sortBy) {
                sortBy.addEventListener('change', applyFiltersAndSort);
            }

            // L∆∞u d·ªØ li·ªáu v·ªÅ server
            async function handleSave() {
                if (!saveButton) return;

                const markedPaths = [];
                fileCheckboxes.forEach(function(checkbox) {
                    if (checkbox.checked) {
                        markedPaths.push(checkbox.dataset.path);
                    }
                });

                const notes = {};
                noteInputs.forEach(function(input) {
                    notes[input.dataset.path] = input.value;
                });

                const originalText = saveButton.textContent;
                saveButton.disabled = true;
                saveButton.textContent = 'Saving...';

                try {
                    const response = await fetch('/save', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ marked_paths: markedPaths, notes: notes })
                    });
                    const result = await response.json();
                    alert(result.message || 'ƒê√£ l∆∞u th√†nh c√¥ng');
                } catch (error) {
                    alert('Kh√¥ng th·ªÉ l∆∞u d·ªØ li·ªáu. Vui l√≤ng th·ª≠ l·∫°i.');
                } finally {
                    saveButton.disabled = false;
                    saveButton.textContent = originalText;
                }
            }

            if (saveButton) {
                saveButton.addEventListener('click', handleSave);
            }

            function openPreviewModal(filename) {
                previewContent.hidden = true;
                previewContent.textContent = '';
                previewStatus.textContent = 'ƒêang t·∫£i n·ªôi dung...';
                previewStatus.className = 'preview-loading';
                previewModal.classList.add('active');
                previewTitle.textContent = `Preview ‚Äî ${filename}`;
            }

            function closePreviewModal() {
                previewModal.classList.remove('active');
            }

            async function loadPreview(index, filename) {
                openPreviewModal(filename);
                try {
                    const response = await fetch(`/preview/${index}`);
                    const data = await response.json();
                    if (data.content) {
                        previewStatus.textContent = '';
                        previewContent.hidden = false;
                        previewContent.textContent = data.content;
                    } else {
                        previewStatus.textContent = data.error || 'Kh√¥ng th·ªÉ xem tr∆∞·ªõc file n√†y.';
                        previewStatus.className = 'preview-error';
                    }
                } catch (error) {
                    previewStatus.textContent = 'C√≥ l·ªói x·∫£y ra khi t·∫£i file.';
                    previewStatus.className = 'preview-error';
                }
            }

            previewButtons.forEach(function(button) {
                button.addEventListener('click', function() {
                    const index = this.dataset.index;
                    const filename = this.dataset.filename;
                    loadPreview(index, filename);
                });
            });

            if (previewClose) {
                previewClose.addEventListener('click', closePreviewModal);
            }

            if (modalOverlay) {
                modalOverlay.addEventListener('click', function(event) {
                    if (event.target === modalOverlay) {
                        closePreviewModal();
                    }
                });
            }

            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape') {
                    closePreviewModal();
                }
            });
        });
    </script>
